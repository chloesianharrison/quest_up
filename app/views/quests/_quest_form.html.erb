

<div class="form-container">

<%= simple_form_for(quest) do |f| %>
<%= f.input :name %>
<%= f.input :notes %>
<%= f.input :due_date %>
<div data-controller="slider" class="slider-container", data-slider-label-value="Fun Rating:" >
<%= f.input :fun_rating, as: :range, input_html:{ min:"0", max:"10", step:"1", class:"slider", 'data-slider-target'=> "sliderValue", data:{ action: "input->slider#handleSlider" } }, :label_html => { :class => 'sliderDisplay', 'data-slider-target'=> "sliderDisplay"} %>
   <%# <p class="slider-display" data-slider-target="sliderDisplay"></p> %>
</div>
<div data-controller="slider" class="slider-container" data-slider-label-value="Difficulty Rating:">
<%= f.input :difficulty_rating, as: :range, input_html:{ min:"0", max:"10", step:"1", class:"slider", 'data-slider-target'=> "sliderValue", data:{ action: "input->slider#handleSlider" } }, :label_html => { :class => 'sliderDisplay', 'data-slider-target'=> "sliderDisplay"}  %>
   <%# <p class="slider-display m-3" data-slider-target="sliderDisplay"></p> %>
</div>
<div data-controller="slider" class="slider-container" data-slider-label-value="Consequence Rating:">
<%= f.input :consequence_level, as: :range, input_html:{ min:"0", max:"10", step:"1", class:"slider", 'data-slider-target'=> "sliderValue", data:{ action: "input->slider#handleSlider" }}, :label_html => { :class => 'sliderDisplay', 'data-slider-target'=> "sliderDisplay"}  %>
   <%# <p class="slider-display" data-slider-target="sliderDisplay"></p> %>
</div>
<%= f.submit %>
<% end %>

</div>
