<div class="navbar navbar-expand-sm navbar-light navbar-lewagon justify-items-center">
  <div class="d-flex nav-xp-level justify-content-center">

  <%# converts the xp to a level and a 2 digit xp rating %>
        <% if current_user.xp = 100 %>
          <% @level = 0 %>
          <% @xp = current_user.xp %>
        <% elsif %>
          <% @levels = current_user.xp.to_s.chars %>
          <% @level = @levels[0] %>
          <% @xp = @levels[1] + @levels[2] %>
        <% end %>

  <%# puts the xp and level into the navbar %>
      <p class="me-2 mb-1" id="levelcounter">Level: <%= @level %></p>
      <p class="ms-2 me-2 mb-1" id="xpcounter">XP: <%= @xp %></p>
      <p class="ms-2 me-2 mb-1" id="spend">XP to spend: <%= current_user.xp %></p>

    </div>
  <div class="container-fluid">

    <div class="progress nav-width">
      <div class="progress-bar bg-warning" role="progressbar" id="progress-bar" style="width: <%= @xp %>%" aria-valuenow=<%= @xp %> aria-valuemin="0" aria-valuemax="100">
      </div>

    </div>

  </div>
</div>
