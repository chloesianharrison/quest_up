<div class="container">
  <h1>Rewards</h1>

  <% @rewards.each do |reward| %>
    <div class="card card-list-outside-reward">
      <div class="d-flex justify-content-between">
        <div class="card card-list-inside">
          <p class="card-title"><%= reward.name %></p>
        </div>
        <div>
          <%= reward.completed %><i class="fa-solid fa-star"></i></p>
        </div>
      </div>
      <div class="card card-list-info">
        <p class="card-details">
          <%= reward.details %>
        </p>
          <br>
          <div class="d-flex">
            <p class="xp-reward flex-grow-1"><%= reward.xp %>XP</p>
            <%= link_to "edit", edit_reward_path(reward), class:"btn btn-review" %>
            <%= link_to "delete", reward_path(reward), class:"btn btn-review", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
      </div>
    </div>
  <% end %>
</div>
